<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:layout_width="fill_parent"
  android:layout_height="fill_parent"
  android:orientation="vertical"
  android:gravity="left"
  >
  	<LinearLayout
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:orientation="horizontal"
	    android:paddingLeft="5dip"
	    android:background="@drawable/msg_type_selector_bg"
	    >
	    
	    <Button 
			android:id="@+id/choseSpeakBtn" 
			android:layout_width="wrap_content" 
			android:layout_height="wrap_content"
			android:layout_gravity="left"
			android:drawableTop="@drawable/voice_mode_btn_nor"
			android:background="@drawable/function_btn_1"
			android:text="对讲"
			android:textColor="#ffffff"
			/>
		<Button 
			android:id="@+id/choseMsgBtn" 
			android:layout_width="wrap_content" 
			android:layout_height="wrap_content"
			android:drawableTop="@drawable/msg_mode_btn_nor"
			android:background="@drawable/function_btn_2"
			android:layout_marginLeft="4dip"
			android:text="文本"
			android:textColor="#ffffff"
			/>
   
	    <Button 
			android:id="@+id/choseSmilyBtn" 
			android:layout_width="wrap_content" 
			android:layout_height="wrap_content"
			android:drawableTop="@drawable/smiley_btn_nor"
			android:background="@drawable/function_btn_3"
			android:text="表情"
			android:textColor="#ffffff"
			android:layout_marginLeft="4dip"
			android:layout_marginRight="4dip"
			/>
		<Button 
			android:id="@+id/choseImageBtn" 
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:text="图片"
			android:textColor="#ffffff"
			android:drawableTop="@drawable/camera_btn_nor"
			android:background="@drawable/function_btn_4"
			/>
    </LinearLayout>

</LinearLayout>
